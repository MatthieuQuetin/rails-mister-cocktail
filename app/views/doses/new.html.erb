<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Add your dose</h1>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.label :ingredient %>
      <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name %>
      <%= f.submit "add a dose" %>
      <% end %>
    </div>
  </div>
</div>
